{#
/**
 * @file
 * Default theme implementation to present a media entity.
 *
 * Available variables:
 * - name: Name of the media.
 * - content: Media content.
 *
 * @see template_preprocess_media()
 *
 * @ingroup themeable
 */
#}

{% if content %}
  <div class="col-md-4 col-sm-12">
    <div class="card" {{ attributes }}>
      <div  class="card-img-top">
        <img src="/{{ directory }}/images/remove-icon.png" class="remove-icon-collection-list button--remove-in-collection remove-icon-collection-list-hidden">
        <a class="card-img-overlay"></a>
        {{ content.thumbnail }}
      </div>
      <div class="card-body">
        <div class="text-overlay">
          <div class="card--inner-text">
            <p class="title">{{ content.name }}</p>
            <p class="keywords">{{ content.field_keywords }}</p>
          </div>
          <p>ASSET TYPE: <span class="asset-type">{{ content.asset_type }}</span></p>
          </div>
        </div>
      </div>
    </div>
{% endif %}