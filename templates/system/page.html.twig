          <ul class="user-menu--dropdown" id="js-user-dropdown">
            <li><a href="/user">{{ "View profile"|t }}</a></li>
            <li><a href="/user/{{ user.id }}/edit">{{ "Edit profile"|t }}</a></li>
            <li><a href="/user/logout">{{ "Logout"|t }}</a></li>
          </ul>
        </div>
      </div>
    </div>
    {% endif %}
    <header{{ navbar_attributes }} id="navbar" role="banner">
      <div class="header--inner">

      {% if navbar_attributes.inner_container %}
        <div class="{{ container_class }}">
      {% endif %}

      {% block navigation %}
        {#<div class="header-background"></div>#}
        {{ attach_library('damo_theme/header') }}
        {{ attach_library('damo_theme/front_page') }}
        {{ page.navigation }}
      {% endblock %}

      {% block navigation_collapsible %}
        {{ page.navigation_collapsible }}
      {% endblock %}

      {% if not navbar_attributes.inner_container %}
        </div>
      {% endif %}
      </div>
    </header>
  {% endblock %}
{% endif %}

{# Main #}
{% block main %}
  <main role="main" class="{{ container_class }} js-quickedit-main-content">
    <div class="row">

      {# Header #}
      {% if page.header %}
        {% block header %}
          <div class="col-sm-12" role="heading">
            {{ page.header }}
          </div>
        {% endblock %}
      {% endif %}

      {# Sidebar First #}
      {% if page.sidebar_first and not is_admin_route %}
        {% block sidebar_first %}
          {{ page.sidebar_first }}
        {% endblock %}
      {% endif %}
      {# Content #}
      {% set content_classes = [
        page.sidebar_first and page.sidebar_second and not is_admin_route ? 'col-sm-6',
        (page.sidebar_first and page.sidebar_second is empty) and not is_admin_route ? 'col-sm-9',
        (page.sidebar_second and page.sidebar_first is empty) and not is_admin_route ? 'col-sm-9',
        is_admin_route or (page.sidebar_first is empty and page.sidebar_second is empty) ? 'col-sm-12'
      ] %}
      <section{{ content_attributes.addClass(content_classes) }}>
        {# Highlighted #}
        {% if page.highlighted %}
          {% block highlighted %}
            {{ page.highlighted }}
          {% endblock %}
        {% endif %}

        {# Breadcrumbs #}
        {% if breadcrumb %}
          {% block breadcrumb %}
            {{ breadcrumb }}
          {% endblock %}
        {% endif %}

        {# Action Links #}
        {% if action_links %}
          {% block action_links %}
            <ul class="action-links">{{ action_links }}</ul>
          {% endblock %}
        {% endif %}

        {# Help #}
        {% if page.help %}
          {% block help %}
            {{ page.help }}
          {% endblock %}
        {% endif %}

        {# secondary_navigation #}
        {% if page.secondary_navigation %}
          {% block secondary_navigation %}
            {{ page.secondary_navigation }}
          {% endblock %}
        {% endif %}

        {# Content #}
        {% block content %}
          <a id="main-content"></a>
          {{ page.content }}
        {% endblock %}
      </section>

      {# Sidebar Second #}
      {% if page.sidebar_second and not is_admin_route %}
        {% block sidebar_second %}
          {{ page.sidebar_second }}
        {% endblock %}
      {% endif %}
    </div>
  </main>
{% endblock %}
{% if media_description %}
  {% if is_front %}
    <div class="usage-wrapper">
      <div class="control-wrapper">
        <i class="fas fa-question-circle"></i>
        <span class="control-title">{{ media_description.content.title }}</span>
      </div>
    </div>
  {% endif %}
  <div class="useage-overlay-wrapper">
    <div class="overlay-content">
      <span class="close"><i class="fas fa-times"></i></span>
      <h4 class="title">
        {{ media_description.content.title }}
      </h4>
      <p class="description">
        {{ media_description.content.description }}
      </p>
    </div>
  </div>
{% endif %}

{% if page.footer %}
  {% block footer %}
    {{ page.footer }}
  {% endblock %}
{% endif %}
