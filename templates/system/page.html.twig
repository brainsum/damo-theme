    {% if logged_in %}
    <div class="admin-navigation">
      <div class="admin-navigation--inner">
        <a href="/admin/assets/all-unpublished" class="button-border">{{ "Assets waiting for approval" }}</a>
        <div class="user-menu" id="js-user-menu">{{ user.account.name }}
